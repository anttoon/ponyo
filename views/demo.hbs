<script>

// parse bodyText for the video widget
//<exp:widget size=\"full\" align=\"none\" type=\"webtv-article\" source=\"http://livedata.flotsam.service.consul.xpr.dex.nu/webtv-article/7f3c300b-0c32-4a44-93c6-4e8ffd832fd3\"></exp:widget>
var bodyText = `{{{bodyText}}}`;
var index = bodyText.indexOf('type="webtv-article" source=\"http://livedata.flotsam.service.consul.xpr.dex.nu/') + 79;
var end = bodyText.indexOf('\"></exp:widget>', index);
var route = `/ponyo/assets/${bodyText.substring(index, end)}`;

// request source.
var xhr = new XMLHttpRequest();
xhr.onreadystatechange = function() {
  if (xhr.responseText) {
    // initiate content video.
    var contentVideo = document.querySelector(".content-video");
    window.Ponyo.newVideo(contentVideo, JSON.parse(xhr.responseText));
  }
};
xhr.open("GET", route);
xhr.send(null);

(function () {
  var related = document.querySelector(".related");
  window.Ponyo = window.Ponyo || {};
  window.Ponyo.newVideo(related, {{{toJSON relatedWebTvArticle.article}}});

})()
</script>
