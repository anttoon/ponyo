{
  "apps": [
    {
      "name": "dev app",
      "script": "app.js",
      "instances": 2, // don't change this unless you are God
      "node_args": "--nouse-idle-notification",
      "watch": true,
      "watch_options": {
        "usePolling": true,
        "useFsEvents": false,
        "atomic": false
      },
      "merge_logs": true,
      "cwd": "/exp-container/app",
      "out_file": "/exp-container/logs/app.log"
    }
  ]
}
