{
  "apps": [
    {
      "name": "dev app",
      "script": "app.js",
      "instances": 1,
      "node_args": "--nouse-idle-notification",
      "watch": ["**/*.js", "**/*.json"],
      "watch_options": {
        "usePolling": true,
        "useFsEvents": false,
        "atomic": false,
        "interval": 500
      },
      "merge_logs": true,
      "cwd": "/exp-container/app"
    }
  ]
}
