$control-bar-height = 30px;
$button-icon {
  width: 20px;
  height: 20px;
  padding: 5px;
  border: 0;
  background: none;
  color: #fff;
}
$normalize-control-element {
  display: table-cell;
  background: none;
  height: $control-bar-height;
}
.control-bar {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  display: table;
  background: rgba(#000, .7);
  transition: bottom .2s;

  &--hide {
    bottom: - $control-bar-height;
  }

  .control-bar__pause-button {
    @extends $normalize-control-element;
    @extends $button-icon;
  }

  .control-bar__volume {
    @extends $normalize-control-element;
    @extends $button-icon;
  }

  .control-bar__volume-button {
    @extends $button-icon;
  }

  .control-bar__progress-bar {
    @extends $normalize-control-element;
    width: 100%;
  }

  .control-bar__fullscreen {
    @extends $normalize-control-element;
    @extends $button-icon;
  }

  .control-bar__fullscreen-button {
    @extends $button-icon;
  }
}
