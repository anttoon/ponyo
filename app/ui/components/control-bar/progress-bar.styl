
$control-bar-height = 30px;
.control-bar__progress-bar {
  display: table;
  width: 100%;
  vertical-align: middle;
  color: #fff;
  position: relative;
  height: $control-bar-height;

  .progress-bar__scrubber {
    position: relative;
    width: 100%;
    height: 20px;
    background-color: black;
  }

  .progress-bar__progress {
    width: 0;
    height: 20px;
    background-color: red;
    transition: width .2s;
  }
}
