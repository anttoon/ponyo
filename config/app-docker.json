{
  "apps": [
    {
      "name": "app",
      "script": "cluster.js",
      "node_args"   : "--nouse-idle-notification",
      "watch": true,
      "watch_options": {
        "usePolling": true,
        "useFsEvents": false,
        "atomic": false
      },
      "merge_logs": true,
      "cwd": "/exp-container/app",
      "out_file": "/exp-container/logs/app.log",
      "env": {
        "PORT": "3000"
      }
    }
  ]
}
