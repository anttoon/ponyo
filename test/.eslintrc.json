{
  "extends": "../.eslintrc.json",
  "env": {
    "mocha": true
  },
  "rules": {
    "strict": 0,
    "no-unused-expressions": 0,
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "Feature",
          "Scenario",
          "Given",
          "When",
          "Then",
          "And",
          "But",
          "I",
          "System",
          "Describe"
        ]
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "document": false,
    "ga": false,
    "window": false,

    "describe": false,
    "xdescribe": false,
    "it": false,
    "xit": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,

    "Feature": false,
    "Scenario": false,
    "Given": false,
    "When": false,
    "Then": false,
    "And": false,
    "But": false
  }
}
